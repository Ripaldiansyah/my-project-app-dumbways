{{#>layout title="My Project"}}
<section>
    <div class="container text-center p-2 py-md-5 ">
        <h2 class="fw-bold">EDIT PROJECT</h2>
        <form action="/projects/edit/{{project.id}}" method="post" enctype="multipart/form-data" id="editFormProject">
            <div class="d-flex flex-column text-start mb-2">
                <label for="projectName">Project Name</label>
                <input type="text" name="projectName" id="projectName"  value="{{project.projectName}}" class="border-0 shadow rounded-1 py-2" required/>
            </div>
            <div class="d-flex flex-row text-start gap-3 mb-2">
                <div class="d-flex flex-column text-start w-100">
                    <label for="startDate">Start date</label>
                    <input type="date" name="startDate" id="startDate" value="{{project.startDate}}" class="border-0 shadow rounded-1 py-2" required/>
                </div>
                <div class="d-flex flex-column text-start w-100">
                    <label for="endDate">End date</label>
                    <input type="date" name="endDate" id="endDate"  value="{{project.endDate}}" class="border-0 shadow rounded-1 py-2"required />
                </div>
            </div>
            <div class="d-flex flex-column text-start mb-2">
                <label for="description">Description</label>
                <textarea name="description" id="description" rows="6" 
                    class="border-0 shadow rounded-1 py-2 " required>{{project.description}}</textarea>
            </div>

            <div class="d-flex flex-column text-start mb-2">
                <label class="label-project">Technologies</label>
                <div class="row row-cols-2">
                    <div>
                        <input type="checkbox" name="technologies" id="nodeJs" value="Node JS" class="checkbox" {{#if (checkTech project.technologies "Node JS")}} checked {{/if}} />
                        
                        <label for="nodeJs">Node Js</label>
                    </div>

                    <div>
                        <input type="checkbox" name="technologies" id="nextJs" value="Next JS" class="checkbox"{{#if (checkTech project.technologies "Next JS")}} checked {{/if}} />
                        <label for="nextJs">Next Js</label>
                    </div>
                    <div>
                        <input type="checkbox" name="technologies" id="reactJs" value="React JS" class="checkbox" {{#if (checkTech project.technologies "React JS")}} checked {{/if}} />
                        <label for="reactJs">React Js</label>
                    </div>
                    <div>
                        <input type="checkbox" name="technologies" id="typeScript" value="TypeScript"
                            class="checkbox" {{#if (checkTech project.technologies "TypeScript")}} checked {{/if}} />
                        <label for="typeScript">TypeScript</label>
                    </div>
                </div>
            </div>

            <div class="d-flex flex-column text-start mb-2">
                <label for="imageUrl">Upload Image</label>
                <div class="bg-white border-0 shadow rounded-1 m-0 position-relative d-flex align-items-center ">

                    <input type="file" name="imageUrl" id="imageUrl" class="position-absolute z-0 file-upload"
                        accept="image/*" />
                    <label for="imageUrl" class="d-flex w-100 justify-content-between  pe-4 rounded-1">
                        <p class="bg-dark-subtle py-2 px-4 rounded-1 shadow  fw-bold text-muted z-2">choose
                        </p>
                        <i class="fa fa-paperclip my-auto" aria-hidden="true"></i>
                    </label>
                </div>
            </div>
            <div class="text-end p-3">
                <button class="btn btn-dark rounded-5 px-5 py-2 fw-bold" id="editBtnSubmit">submit</button>
            </div>
        </form>

    </div>
</section>

{{/layout}}